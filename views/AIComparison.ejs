<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compare Plans | +Pulse</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Silkscreen:wght@400&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Silkscreen', monospace;
            background: linear-gradient(135deg, var(--background-light) 0%, var(--background-white) 100%);
            min-height: 100vh;
        }
        
        .compare-container {
            max-width: 1400px;
            margin: 40px auto;
            padding: 30px;
            background: var(--background-white);
            border-radius: 20px;
            box-shadow: 0 10px 40px var(--shadow-primary);
            border: 2px solid var(--border-color);
        }
        
        .page-header {
            text-align: center;
            margin-bottom: 50px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            color: white;
            padding: 50px 30px;
            border-radius: 20px;
            box-shadow: 0 8px 30px var(--shadow-primary);
        }
        
        .page-header h1 {
            margin: 0;
            font-size: 2.8rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            margin-bottom: 15px;
        }
        
        .page-header p {
            font-size: 1.2rem;
            margin: 0;
            opacity: 0.95;
        }
        
        .select-plans-section {
            background: var(--background-light);
            padding: 40px;
            border-radius: 20px;
            margin-bottom: 40px;
            border: 2px solid var(--border-color);
        }
        
        .select-plans-section h2 {
            text-align: center;
            color: var(--text-dark);
            font-size: 2rem;
            margin-bottom: 30px;
        }
        
        .selection-instruction {
            text-align: center;
            color: var(--text-light);
            font-size: 1.1rem;
            margin-bottom: 30px;
        }
        
        .plans-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }
        
        .plan-card {
            background: var(--background-white);
            border: 3px solid var(--border-color);
            border-radius: 20px;
            padding: 30px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }
        
        .plan-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }
        
        .plan-card:hover {
            transform: translateY(-8px);
            border-color: var(--primary-color);
            box-shadow: 0 15px 40px var(--shadow-primary);
        }
        
        .plan-card:hover::before {
            transform: scaleX(1);
        }
        
        .plan-card.selected {
            border-color: var(--primary-color);
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            color: white;
            transform: translateY(-5px);
            box-shadow: 0 12px 35px var(--shadow-primary);
        }
        
        .plan-card.selected::before {
            transform: scaleX(1);
        }
        
        .plan-name {
            font-size: 1.4rem;
            color: var(--primary-color);
            margin-bottom: 15px;
            font-weight: bold;
        }
        
        .plan-card.selected .plan-name {
            color: white;
        }
        
        .plan-premium {
            font-size: 1.8rem;
            color: var(--text-dark);
            margin-bottom: 20px;
            font-weight: bold;
        }
        
        .plan-card.selected .plan-premium {
            color: white;
        }
        
        .plan-provider {
            font-size: 1rem;
            color: var(--text-light);
            margin-bottom: 15px;
        }
        
        .plan-card.selected .plan-provider {
            color: rgba(255, 255, 255, 0.9);
        }
        
        .plan-features {
            font-size: 0.9rem;
            color: var(--text-light);
            line-height: 1.6;
            margin-bottom: 20px;
        }
        
        .plan-card.selected .plan-features {
            color: rgba(255, 255, 255, 0.9);
        }
        
        .plan-eligibility {
            font-size: 0.85rem;
            color: var(--text-light);
            font-style: italic;
            margin-bottom: 15px;
        }
        
        .plan-card.selected .plan-eligibility {
            color: rgba(255, 255, 255, 0.8);
        }
        
        .selection-indicator {
            position: absolute;
            top: 15px;
            right: 15px;
            width: 25px;
            height: 25px;
            border: 2px solid var(--primary-color);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
            opacity: 0;
            transition: all 0.3s ease;
        }
        
        .plan-card.selected .selection-indicator {
            opacity: 1;
            background: white;
            color: var(--primary-color);
        }
        
        .submit-section {
            text-align: center;
        }
        
        .submit-btn {
            background: linear-gradient(135deg, var(--secondary-color) 0%, var(--accent-color) 100%);
            color: white;
            padding: 15px 40px;
            border: none;
            border-radius: 15px;
            font-family: 'Silkscreen', monospace;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 6px 20px var(--shadow-light);
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .submit-btn:hover {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            transform: translateY(-3px);
            box-shadow: 0 10px 30px var(--shadow-primary);
        }
        
        .submit-btn:disabled {
            background: #ccc;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        
        /* Comparison Table Styles */
        .comparison-table-section {
            display: none;
            margin: 40px 0;
            background: var(--background-white);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 40px var(--shadow-primary);
            border: 2px solid var(--border-color);
        }
        
        .comparison-table-section.show {
            display: block;
            animation: fadeInUp 0.5s ease-out;
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .comparison-table-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .comparison-table-header h2 {
            color: var(--text-dark);
            font-size: 2.2rem;
            margin-bottom: 10px;
        }
        
        .comparison-table-header p {
            color: var(--text-light);
            font-size: 1.1rem;
        }
        
        .comparison-table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 25px var(--shadow-light);
            background: var(--background-white);
        }
        
        .comparison-table th {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            color: white;
            padding: 20px 15px;
            text-align: center;
            font-family: 'Silkscreen', monospace;
            font-size: 1rem;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .comparison-table th:first-child {
            text-align: left;
            background: linear-gradient(135deg, var(--secondary-color) 0%, var(--accent-color) 100%);
        }
        
        .comparison-table td {
            padding: 18px 15px;
            text-align: center;
            border-bottom: 1px solid var(--border-color);
            font-size: 1rem;
            color: var(--text-dark);
            vertical-align: middle;
        }
        
        .comparison-table td:first-child {
            text-align: left;
            font-weight: bold;
            background: var(--background-light);
            color: var(--text-dark);
            font-family: 'Silkscreen', monospace;
        }
        
        .comparison-table tr:hover {
            background: var(--background-light);
        }
        
        .comparison-table tr:hover td:first-child {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            color: white;
        }
        
        .plan-name-header {
            font-size: 1.1rem;
            font-weight: bold;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
        }
        
        .provider-subtitle {
            font-size: 0.85rem;
            opacity: 0.9;
            margin-top: 5px;
        }
        
        .restart-btn {
            background: linear-gradient(135deg, var(--accent-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 12px;
            font-family: 'Silkscreen', monospace;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 30px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .restart-btn:hover {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px var(--shadow-primary);
        }
        
        .help-section {
            text-align: center;
            margin-top: 50px;
            padding: 30px;
            background: var(--background-light);
            border-radius: 20px;
            border: 2px solid var(--border-color);
        }
        
        .help-section h3 {
            color: var(--text-dark);
            margin-bottom: 15px;
            font-size: 1.6rem;
        }
        
        .help-section p {
            color: var(--text-light);
            margin-bottom: 25px;
            font-size: 1.1rem;
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .compare-container {
                margin: 20px;
                padding: 20px;
            }
            
            .page-header h1 {
                font-size: 2rem;
            }
            
            .plans-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }
            
            .plan-card {
                padding: 25px;
            }
            
            .comparison-table-section {
                padding: 20px;
                margin: 20px 0;
            }
            
            .comparison-table-header h2 {
                font-size: 1.8rem;
            }
            
            .comparison-table {
                font-size: 0.9rem;
            }
            
            .comparison-table th,
            .comparison-table td {
                padding: 12px 8px;
            }
            
            .plan-name-header {
                font-size: 1rem;
            }
            
            .provider-subtitle {
                font-size: 0.75rem;
            }
            
            .table-responsive {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    
       
    <div class="compare-container">
        <div class="page-header">
            <h1>🛡️ Insurance Plan Comparison</h1>
            <p>Find the perfect Integrated Shield Plan for your needs!</p>
        </div>
        
        <div class="select-plans-section" <% if (showComparison) { %>style="display: none;"<% } %>>
            <h2>COMPARING MADE EASIER TO UNDERSTAND</h2>
            <p class="selection-instruction">Select the Plans you want to compare</p>
            
            <div class="plans-grid">
                <% if (plans && plans.length > 0) { %>
                    <% plans.forEach(function(plan, index) { %>
                        <div class="plan-card" data-plan-id="<%= plan.IntegratedShieldPlanID %>" onclick="togglePlanSelection(this)" 
                             <% if (selectedPlanIds.includes(plan.IntegratedShieldPlanID.toString())) { %>class="selected"<% } %>>
                            <div class="selection-indicator">✓</div>
                            <div class="plan-name"><%= plan.PlanName %></div>
                            <div class="plan-provider">by <%= plan.ProviderName %></div>
                            <div class="plan-premium"><%= plan.PremiumRange || 'Contact for pricing' %></div>
                            <div class="plan-features"><%= plan.CoverageDetails || 'Coverage details available upon comparison' %></div>
                            <div class="plan-eligibility"><%= plan.EligibilityCriteria || 'Standard eligibility applies' %></div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div style="grid-column: 1/-1; text-align: center; padding: 40px; color: var(--text-light);">
                        <h3>No Insurance Plans Available</h3>
                        <p>Please contact support for assistance.</p>
                    </div>
                <% } %>
            </div>
            
            <div class="submit-section">
                <button class="submit-btn" id="submitBtn" onclick="submitComparison()" 
                        <% if (selectedPlanIds.length < 2) { %>disabled<% } %>>
                    <% if (selectedPlanIds.length >= 2) { %>
                        Compare <%= selectedPlanIds.length %> Plans
                    <% } else { %>
                        Select at least 2 plans to compare
                    <% } %>
                </button>
            </div>
        </div>
        
        <!-- Comparison Table Section -->
        <div class="comparison-table-section <% if (showComparison) { %>show<% } %>" id="comparisonTableSection">
            <div class="comparison-table-header">
                <h2>📊 Side-by-Side Comparison</h2>
                <p>Compare the coverage details of your selected plans</p>
            </div>
            
            <div class="table-responsive">
                <table class="comparison-table" id="comparisonTable">
                    <% if (showComparison && comparisonPlans && comparisonPlans.length > 0) { %>
                        <!-- Table Header -->
                        <tr>
                            <th style="text-align: left;">Coverage Details</th>
                            <% comparisonPlans.forEach(function(plan) { %>
                                <th>
                                    <div class="plan-name-header"><%= plan.PlanName %></div>
                                    <div class="provider-subtitle">by <%= plan.ProviderName %></div>
                                </th>
                            <% }) %>
                        </tr>
                        
                        <!-- Ward Type Row -->
                        <tr>
                            <td>Ward Type</td>
                            <% comparisonPlans.forEach(function(plan) { %>
                                <td><%= plan.WardType || 'Class A' %></td>
                            <% }) %>
                        </tr>
                        
                        <!-- Hospital Type Row -->
                        <tr>
                            <td>Hospital Type</td>
                            <% comparisonPlans.forEach(function(plan) { %>
                                <td><%= plan.HospitalType || 'Public' %></td>
                            <% }) %>
                        </tr>
                        
                        <!-- Out of Pocket Expense Row -->
                        <tr>
                            <td>Percentage of Bill You Pay Before Coverage</td>
                            <% comparisonPlans.forEach(function(plan) { %>
                                <td>
                                    <% if (plan.OutOfPocketExpense !== null && plan.OutOfPocketExpense !== undefined) { %>
                                        <%= plan.OutOfPocketExpense %>%
                                    <% } else { %>
                                        25% - 35%
                                    <% } %>
                                </td>
                            <% }) %>
                        </tr>
                        
                        <!-- Premium Range Row -->
                        <tr>
                            <td>Premium Range</td>
                            <% comparisonPlans.forEach(function(plan) { %>
                                <td><%= plan.PremiumRange || 'Contact for pricing' %></td>
                            <% }) %>
                        </tr>
                        
                        <!-- Eligibility Criteria Row -->
                        <tr>
                            <td>Eligibility Criteria</td>
                            <% comparisonPlans.forEach(function(plan) { %>
                                <td><%= plan.EligibilityCriteria || 'Standard eligibility applies' %></td>
                            <% }) %>
                        </tr>
                        
                        <!-- Rider Information Row -->
                        <tr>
                            <td>Rider Options</td>
                            <% comparisonPlans.forEach(function(plan) { %>
                                <td><%= plan.RiderName || 'No rider attached' %></td>
                            <% }) %>
                        </tr>
                    <% } %>
                </table>
            </div>
            
            <button class="restart-btn" onclick="restartComparison()">
                🔄 Restart
            </button>
        </div>
    </div>

    <!-- Flowise Chatbot Integration -->
