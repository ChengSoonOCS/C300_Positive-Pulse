<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Profile - +Pulse Education</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Silkscreen:wght@400&display=swap" rel="stylesheet">
  <style>
    body {
      margin: 0;
      font-family: 'Silkscreen', monospace;
      background: linear-gradient(135deg, #ff2c58 0%, #ff6b35 100%);
      min-height: 100vh;
    }

    .profile-container {
      max-width: 600px;
      margin: 40px auto;
      background: white;
      border-radius: 15px;
      box-shadow: 0 8px 32px rgba(0,0,0,0.1);
      padding: 40px;
      font-family: 'Silkscreen', monospace;
    }

    .profile-header {
      text-align: center;
      margin-bottom: 32px;
    }

    .profile-header h2 {
      margin: 0 0 8px 0;
      color: #ff2c58;
      font-size: 2rem;
    }

    .role-badge {
      display: inline-block;
      background: linear-gradient(135deg, #ff2c58 0%, #ff6b35 100%);
      color: #fff;
      padding: 6px 16px;
      border-radius: 20px;
      font-size: 0.8rem;
      margin: 8px 0;
      box-shadow: 0 2px 8px rgba(255, 44, 88, 0.3);
    }

    .role-badge.admin {
      background: linear-gradient(135deg, #ff2c58 0%, #ff6b35 100%);
    }

    .role-badge.user {
      background: linear-gradient(135deg, #ff2c58 0%, #ff6b35 100%);
    }

    .profile-pic-section {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 32px;
    }

    .profile-pic-preview img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      border: 4px solid #ff2c58;
      object-fit: cover;
      margin-bottom: 16px;
      transition: transform 0.3s;
    }

    .profile-pic-preview img:hover {
      transform: scale(1.05);
    }

    .form-group {
      margin-bottom: 24px;
    }

    .form-group label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
      color: #333;
    }

    .form-group input[type="text"],
    .form-group input[type="email"],
    .form-group input[type="password"],
    .form-group textarea {
      width: 100%;
      padding: 12px;
      border-radius: 8px;
      border: 2px solid #e0e0e0;
      margin-bottom: 8px;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif !important;
      font-size: 14px;
      transition: border-color 0.3s;
    }

    .form-group input:focus,
    .form-group textarea:focus {
      border-color: #ff2c58;
      outline: none;
    }

    .form-group input[type="file"] {
      margin-bottom: 12px;
    }

    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
    }

    .btn-group {
      display: flex;
      gap: 12px;
      justify-content: center;
      margin-top: 24px;
    }

    .btn {
      background: linear-gradient(135deg, #ff2c58 0%, #ff6b35 100%);
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 15px 24px;
      font-size: 1rem;
      cursor: pointer;
      text-decoration: none;
      transition: transform 0.2s;
      font-family: 'Silkscreen', monospace;
      box-shadow: 0 4px 15px rgba(255, 44, 88, 0.2);
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(255, 44, 88, 0.3);
    }

    .btn-secondary {
      background: #666;
      box-shadow: 0 4px 15px rgba(102, 102, 102, 0.2);
    }

    .btn-secondary:hover {
      background: #555;
      box-shadow: 0 6px 20px rgba(102, 102, 102, 0.3);
    }

    .alert {
      padding: 12px;
      border-radius: 8px;
      margin-bottom: 20px;
      text-align: center;
    }

    .alert.error {
      background: #ffebee;
      color: #c62828;
      border: 1px solid #ffcdd2;
    }

    .alert.success {
      background: #e8f5e8;
      color: #2e7d32;
      border: 1px solid #c8e6c9;
    }

    .profile-tabs {
      display: flex;
      margin-bottom: 24px;
      border-bottom: 2px solid #ff2c58;
      background: rgba(255, 44, 88, 0.05);
      border-radius: 8px 8px 0 0;
    }

    .tab-btn {
      background: none;
      border: none;
      padding: 12px 24px;
      cursor: pointer;
      font-family: 'Silkscreen', monospace;
      border-bottom: 3px solid transparent;
      transition: all 0.3s;
      color: #666;
    }

    .tab-btn.active {
      border-bottom-color: #ff2c58;
      background: rgba(255, 44, 88, 0.1);
      color: #ff2c58;
    }

    .tab-btn:hover:not(.active) {
      background: rgba(255, 44, 88, 0.05);
      color: #ff2c58;
    }

    .tab-content {
      display: none;
    }

    .tab-content.active {
      display: block;
    }
  </style>
</head>

<body>
  <%- include('partials/navbar.ejs') %>
    <div class="profile-container">
      <div class="profile-header">
        <h2>My Profile</h2>
        <div class="role-badge <%= user.role === 'admin' ? 'admin' : 'user' %>">
          <%= user.role ? user.role.toUpperCase() : 'USER' %>
        </div>
      </div>

          <!-- Alert Messages -->
          <% if (typeof error !=='undefined' && error) { %>
            <div class="alert error">
              <% if (error==='1' ) { %>
                Failed to update profile. Please try again.
                <% } else { %>
                  <%= error %>
                    <% } %>
            </div>
            <% } %>
              <% if (typeof success !=='undefined' && success) { %>
                <div class="alert success">
                  <% if (success==='1' ) { %>
                    Profile updated successfully!
                    <% } else { %>
                      <%= success %>
                        <% } %>
                </div>
                <% } %>

                  <!-- Profile Tabs -->
                  <div class="profile-tabs">
                    <button class="tab-btn active" onclick="showTab('basic')">Basic Info</button>
                    <button class="tab-btn" onclick="showTab('security')">Security</button>
                  </div>

                  <!-- Basic Info Tab -->
                  <div id="basic-tab" class="tab-content active">
                    <form action="/profile" method="POST" enctype="multipart/form-data">
                      <div class="profile-pic-section">
                        <div class="profile-pic-preview">
                          <img id="profile-pic-img" src="<%= user.profilePicUrl || '/images/default-avatar.svg' %>"
                            alt="Profile Picture" />
                        </div>
                        <input type="file" name="profilePic" id="profilePicInput" accept="image/*" />
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="username">Username</label>
                          <input type="text" id="username" name="username" value="<%= user.username || user.UserName %>"
                            required />
                        </div>
                        <div class="form-group">
                          <label for="email">Email</label>
                          <input type="email" id="email" name="email" value="<%= user.email || user.Email %>"
                            required />
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group">
                          <label for="contact">Phone Number</label>
                          <input type="text" id="contact" name="contact" value="<%= user.Contact || '' %>"
                            placeholder="Enter your phone number" />
                        </div>
                        <div class="form-group">
                          <label for="address">Address</label>
                          <input type="text" id="address" name="address" value="<%= user.Address || '' %>"
                            placeholder="Enter your address" />
                        </div>
                      </div>

                      <div class="btn-group">
                        <button type="submit" class="btn">Save Changes</button>
                        <a href="<%= user.role === 'admin' ? '/admin' : '/user/dashboard' %>"
                          class="btn btn-secondary">Back to Dashboard</a>
                      </div>
                    </form>
                  </div>

                  <!-- Security Tab -->
                  <div id="security-tab" class="tab-content">
                    <form action="/profile/change-password" method="POST">
                      <div class="form-group">
                        <label for="currentPassword">Current Password</label>
                        <input type="password" id="currentPassword" name="currentPassword" required />
                      </div>
                      <div class="form-group">
                        <label for="newPassword">New Password</label>
                        <input type="password" id="newPassword" name="newPassword" required />
                      </div>
                      <div class="form-group">
                        <label for="confirmPassword">Confirm New Password</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" required />
                      </div>
                      <div class="btn-group">
                        <button type="submit" class="btn">Change Password</button>
                      </div>
                    </form>
                  </div>

    </div>

    <script>
      // Tab functionality
      function showTab(tabName) {
        // Hide all tab contents
        document.querySelectorAll('.tab-content').forEach(tab => {
          tab.classList.remove('active');
        });

        // Remove active class from all tab buttons
        document.querySelectorAll('.tab-btn').forEach(btn => {
          btn.classList.remove('active');
        });

        // Show selected tab content
        document.getElementById(tabName + '-tab').classList.add('active');

        // Add active class to clicked button
        event.target.classList.add('active');
      }

      // Preview selected profile picture
      document.getElementById('profilePicInput').addEventListener('change', function (e) {
        const file = e.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function (evt) {
            document.getElementById('profile-pic-img').src = evt.target.result;
          };
          reader.readAsDataURL(file);
        }
      });

      // Parse URL parameters for error/success messages
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get('error') && !document.querySelector('.alert.error')) {
        const alertDiv = document.createElement('div');
        alertDiv.className = 'alert error';
        alertDiv.textContent = 'Failed to update profile. Please try again.';
        document.querySelector('.profile-tabs').insertAdjacentElement('beforebegin', alertDiv);
      }
      if (urlParams.get('success') && !document.querySelector('.alert.success')) {
        const alertDiv = document.createElement('div');
        alertDiv.className = 'alert success';
        alertDiv.textContent = 'Profile updated successfully!';
        document.querySelector('.profile-tabs').insertAdjacentElement('beforebegin', alertDiv);
      }
    </script>
</body>

</html>