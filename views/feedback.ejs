<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Silkscreen:wght@400&display=swap" rel="stylesheet">
    <title>+Pulse</title>
    <style>
        body {
            background: #f4f5f7;
            font-family: 'Silkscreen', monospace;
        }
        .page-title {
            color: #d52323;
            font-weight: 700;
            font-size: 2.5rem;
            text-align: center;
            margin: 2rem 0;
        }
        .content-wrapper {
            max-width: 1000px;
            margin: 0 auto 2rem auto;
            padding: 0 1rem;
        }
        .feedback-container {
            background: #fff;
            border-radius: 24px;
            box-shadow: 0 2px 16px rgba(0,0,0,0.10);
            padding: 2rem;
            margin-bottom: 2rem;
        }
        .section-title {
            color: #d52323;
            font-weight: 700;
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #e0e0e0;
        }
        .form-label {
            color: #333;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        .form-control {
            border: 2px solid #e0e0e0;
            border-radius: 1rem;
            padding: 0.8rem 1.2rem;
            font-size: 1.1rem;
            transition: all 0.3s;
        }
        .form-control:focus {
            border-color: #d52323;
            box-shadow: 0 0 0 0.25rem rgba(213,35,35,0.1);
        }
        .btn-submit {
            background: linear-gradient(90deg, #d52323 0%, #7024ab 100%);
            color: #fff;
            border: none;
            border-radius: 1rem;
            padding: 1rem 2rem;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s;
            width: auto;
            min-width: 200px;
        }
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(213,35,35,0.2);
        }
        .history-table {
            background: #fff;
            border-radius: 1rem;
            overflow: hidden;
        }
        .table {
            margin-bottom: 0;
        }
        .table th {
            background: #f8f9fa;
            color: #d52323;
            font-weight: 600;
            border: none;
            padding: 1rem;
        }
        .table td {
            border: none;
            padding: 1rem;
            vertical-align: middle;
        }
        .badge {
            padding: 0.5rem 1rem;
            font-weight: 600;
            border-radius: 0.8rem;
        }
        .alert {
            border-radius: 1rem;
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    
    <div class="content-wrapper">
        <h1 class="page-title">Submit Feedback</h1>
        
        <div class="feedback-container">
            <% if (messages.length > 0) { %>
                <div class="alert alert-success">
                    <%= messages %>
                </div>
            <% } %>
            <% if (errors.length > 0) { %>
                <div class="alert alert-danger">
                    <%= errors %>
                </div>
            <% } %>

            <form action="/feedback/submit" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-control" id="category" name="category" required>
                            <option value="">Select a category</option>
                            <option value="Bug Report">Chatbot experience</option>
                            <option value="Feature Request">Features</option>
                            <option value="Login">Forgot Password</option>
                            <option value="Support">Support</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label for="attachment" class="form-label">Attachment (Optional)</label>
                        <input type="file" class="form-control" id="attachment" name="attachment"accept="image/*,.pdf,.doc,.docx">
                        <small class="text-muted">Supported: Images, PDF, DOC, DOCX (Max 5MB)</small>
                    </div>
                </div>

                <div class="mb-4">
                    <label for="message" class="form-label">Your Feedback</label>
                    <textarea class="form-control" id="message" name="message" rows="6" 
                            placeholder="Please describe your feedback in detail..." required></textarea>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-submit">
                        Submit Feedback
                    </button>
                </div>
            </form>
        </div>

        <% if (typeof feedback !== 'undefined' && feedback.length > 0) { %>
        <div class="feedback-container">
            <h3 class="section-title">Previous Feedback</h3>
            <div class="history-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Message</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% feedback.forEach(item => { %>
                        <tr>
                            <td><%= new Date(item.submittedAt).toLocaleDateString() %></td>
                            <td><%= item.category %></td>
                            <td><%= item.message.substring(0, 50) %>...</td>
                            <td>
                                <span class="badge bg-<%= item.status === 'pending' ? 'warning' : 
                                    item.status === 'resolved' ? 'success' : 'secondary' %>">
                                    <%= item.status %>
                                </span>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <% } %>
    </div>

    <%- include ('partials/footer.ejs') %>
</body>
</html>